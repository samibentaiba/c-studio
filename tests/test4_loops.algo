// Test 3.3: Loops
ALGORITHM LoopTest
VAR
    i, sum : INTEGER
BEGIN
    PRINT("=== FOR Loop (1 to 5) ===")
    FOR i <- 1 TO 5 DO
        PRINT("i =", i)
    
    PRINT("=== FOR Loop STEP 2 (0 to 10) ===")
    FOR i <- 0 TO 10 STEP 2 DO
        PRINT("i =", i)
    
    // Sum calculation with FOR
    sum <- 0
    FOR i <- 1 TO 10 DO
        sum <- sum + i
    PRINT("Sum 1-10 =", sum)
END.
